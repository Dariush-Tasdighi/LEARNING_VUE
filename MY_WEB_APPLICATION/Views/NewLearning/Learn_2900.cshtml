@{
	Layout = null;
}

<!DOCTYPE html>

<html>
<head>
	<meta name="viewport" content="width=device-width" />

	<title>Learn</title>

	<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
	<link href="~/Content/NewSite.css" rel="stylesheet" />

	<style>
		[v-cloak] {
			display: none;
		}

		.someName-enter-active, .someName-leave-active {
			transition: opacity 1.5s;
		}

		.someName-enter, .someName-leave-to {
			opacity: 0;
		}
	</style>
</head>
<body>
	<div class="container" id="app" v-cloak>

		<h1>
			Learning Animation!
		</h1>

		@*https://vuejs.org/v2/guide/transitions.html*@

		<hr />

		<button type="button" v-on:click="show = !show">Toggle</button>

		<hr />

		<div class="card-columns">

			<transition name="someName">
				<div class="card bg-warning" v-if="show">

					<div class="card-header">
						Header
					</div>

					<div class="card-body">
						Body
					</div>

					<div class="card-footer">
						Footer
					</div>

				</div>
			</transition>

		</div>

	</div>

	<script src="~/Scripts/vue.js"></script>

	<script>

		const app = new Vue({

			el: `#app`,

			data: {

				show: true,

			},

			methods: {

			},

			computed: {

			},

			created: function () {

			},

		})

	</script>
</body>
</html>
