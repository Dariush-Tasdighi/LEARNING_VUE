@{
	Layout = null;
}

<!DOCTYPE html>

<html>
<head>
	<meta name="viewport" content="width=device-width" />

	<title>Learn</title>

	<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
	<link href="~/Content/NewSite.css" rel="stylesheet" />

	<style>
		[v-cloak] {
			display: none;
		}
	</style>
</head>
<body>
	<div class="container" id="app" v-cloak>

		<select>
			<option v-for="item in people">{{ item.fullName }}</option>
		</select>

		<hr />

		<select>
			<option>Select an item...</option>
			<option v-for="item in people">{{ item.fullName }}</option>
		</select>

		<hr />

		<select v-on:change="selectedFullNameChanged()">
			<option v-bind:value="null">Select an item...</option>
			<option v-for="item in people">{{ item.fullName }}</option>
		</select>

		<div v-if="selectedPerson">
			Selected Full Name: {{ selectedFullName }}
		</div>

		<br />
		<b>Note: You should use [selectedFullNameChanged()] instead of [selectedFullNameChanged]!</b>

		<hr />

		<select v-on:change="selectedFullNameChanged()">
			<option v-bind:value="null">Select an item...</option>
			<option v-for="item in people" v-bind:value="item.fullName">{{ item.fullName }}</option>
		</select>

		<div v-if="selectedPerson">
			Selected Full Name: {{ selectedFullName }}
		</div>

		<br />
		<b>Note: Similar the previous sample!</b>

		<hr />

		<select v-on:change="selectedPersonChanged()">
			<option v-bind:value="null">Select an item...</option>
			<option v-for="item in people" v-bind:value="item">{{ item.fullName }}</option>
		</select>

		<div v-if="selectedPerson">
			Selected Person:
			<br />
			Selected Age: {{ selectedPerson.age }}
			<br />
			Selected Full Name: {{ selectedPerson.fullName }}
		</div>

		<hr />

	</div>

	<script src="~/Scripts/vue.js"></script>

	<script>

		const allOfPeople = [
			{ id: 1, fullName: `Full Name (1)`, age: 21, },
			{ id: 1, fullName: `Full Name (2)`, age: 22, },
			{ id: 1, fullName: `Full Name (3)`, age: 23, },
			{ id: 1, fullName: `Full Name (4)`, age: 24, },
			{ id: 1, fullName: `Full Name (5)`, age: 25, },
		]

		const app = new Vue({

			el: `#app`,

			data: {

				people: allOfPeople,
				selectedPerson: null,
				selectedFullName: null,

			},

			methods: {

				selectedFullNameChanged: function () {

					this.selectedFullName = event.target.value

				},

				selectedPersonChanged: function () {

					alert(event.target.value)

					this.selectedPerson = event.target.value

				}

			},

		})

	</script>
</body>
</html>
