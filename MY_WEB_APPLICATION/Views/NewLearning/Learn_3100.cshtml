	</style>
</head>
<body>
	<div id="app" class="container" v-cloak>
		<h1>
			Learning Animation!
		</h1>

		@*https://vuejs.org/v2/guide/transitions.html*@

		<hr />

		<button type="button" class="btn btn-primary" v-on:click="show = !show">Toggle</button>

		<hr />

		<div class="card-columns">
			<transition name="someName">
				<div class="card bg-warning" v-if="show">
					<div class="card-header">
						Header
					</div>

					<div class="card-body">
						Body
					</div>

					<div class="card-footer">
						Footer
					</div>
				</div>
			</transition>
		</div>
	</div>

	<script src="~/Scripts/vue.js"></script>

	<script>

		const app = new Vue({

			el: `#app`,

			data: {

				show: false,

			},

			methods: {

			},

			computed: {

			},

			created: function () {

			},

		})

	</script>
</body>
</html>
