				{ fullName: `Full Name (4)`, age: 24, description: `Description (4)`, },
				{ fullName: `Full Name (5)`, age: 25, description: `Description (5)`, },
			]

		const app = new Vue({

			el: `#app`,

			data: {

				colors: allOfColors,
				people: allOfPeople,
				fullNames: allOfFullNames,

			},

			methods: {

				displaySomething: function () {

					alert(`Hello, World!`)

				},

				displayPersonDetails: function (item) {

					// Solution (1)
