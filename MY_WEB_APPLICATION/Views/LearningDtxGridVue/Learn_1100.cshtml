@{
	Layout = null;
}

<!DOCTYPE html>

<html>
<head>
	<meta name="viewport" content="width=device-width" />

	<title>Learn 1100</title>

	<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
	<link href="~/Content/bootstrap-theme.min.css" rel="stylesheet" />
	<link href="~/Content/bootstrap-rtl.min.css" rel="stylesheet" />
	<link href="~/Content/Site.fa-IR.css" rel="stylesheet" />
</head>
<body>
	<div id="app">
		<div class="container">
			<dtx-grid-vue v-bind:settings="settings">

				<template slot="search">

					<div class="form-horizontal">

						<div class="row form-group">
							<label for="firstName" class="col-sm-2 control-label">
								نام
							</label>
							<div class="col-sm-4">
								<input type="Search" id="firstName" class="form-control" placeholder="" v-model="settings.searchItems.firstName" />
							</div>

							<label for="lastName" class="col-sm-2 control-label">
								نام خانوادگی
							</label>
							<div class="col-sm-4">
								<input type="Search" id="lastName" class="form-control" placeholder="" v-model="settings.searchItems.lastName" />
							</div>
						</div>

					</div>
				</template>

			</dtx-grid-vue>
		</div>
	</div>

	<script src="~/Scripts/jquery-3.3.1.min.js"></script>
	<script src="~/Scripts/bootstrap.min.js"></script>
	<script src="~/Scripts/vue.min.js"></script>
	<script src="~/Scripts/axios.min.js"></script>

	<script src="~/Scripts/dtx-components.js"></script>
	<script src="~/Scripts/dtx-grid-vue-culture.fa-IR.js"></script>
	<script src="~/Scripts/dtx-grid-vue.1.0.4.js"></script>

	<script>

		new Vue({

			el: '#app',

			data: {

				settings: {

					rtl: true,

					cultrue: dtxGridVueCulture,
					url: '/LearningDtxGridVue/GetData',

					displayRowNumber: true,
					loadFirstPageAutomatically: true,

					displayErrorMessages: false,
					displayInformationMessages: false,

					columns: [
						{
							fieldName: 'firstName',
							title: 'نام',
						},
						{
							fieldName: 'lastName',
							title: 'نام خانوادگی',
							sortable: true,
						},
						{
							fieldName: 'age',
							title: 'Age',
							sortable: true,
							template: function (item) {

								let result =
									'<span style="color: red;">' + item.age + '</span>'

								return result

							}
						},
						{
							fieldName: 'salary',
							title: 'Salary',
							sortable: true,
							firstSortDirection: 1,
							sortFieldName: 'FirstName',
						},
					],

					// New!
					searchItems: {
						lastName: null,
						firstName: null,
					},

				}

			},

		})

	</script>
</body>
</html>
