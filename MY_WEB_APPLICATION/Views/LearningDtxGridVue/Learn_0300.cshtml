@{
	Layout = null;
}

<!DOCTYPE html>

<html>
<head>
	<meta name="viewport" content="width=device-width" />

	<title>Learn 300</title>

	<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
	<link href="~/Content/bootstrap-theme.min.css" rel="stylesheet" />
	<link href="~/Content/Site.css" rel="stylesheet" />
</head>
<body>
	<div class="container">
		<div id="app">
			<dtx-grid-vue v-bind:settings="settings1"></dtx-grid-vue>
			<hr />
			<dtx-grid-vue v-bind:settings="settings2"></dtx-grid-vue>
			<hr />
			<dtx-grid-vue v-bind:settings="settings3"></dtx-grid-vue>
		</div>
	</div>

	<script src="~/Scripts/jquery-3.5.0.min.js"></script>
	<script src="~/Scripts/bootstrap.min.js"></script>
	<script src="~/Scripts/vue.min.js"></script>
	<script src="~/Scripts/axios.min.js"></script>

	<script src="~/Scripts/Dtx/dtx-components.js"></script>
	<script src="~/Scripts/Dtx/dtx-grid-vue-culture.js"></script>
	<script src="~/Scripts/Dtx/dtx-grid-vue.js"></script>

	<script>

		new Vue({

			el: '#app',

			data: {

				settings1: {

					cultrue: dtxGridVueCulture,
					url: '/LearningDtxGridVue/GetData',

					columns: [
						{ fieldName: 'firstName', title: 'First Name', },
						{ fieldName: 'lastName', title: 'Last Name', },
						{ fieldName: 'age', title: 'Age', },
						{ fieldName: 'salary', title: 'Salary', },
					],

				},

				settings2: {

					cultrue: dtxGridVueCulture,
					url: '/LearningDtxGridVue/GetData',

					// New!
					pageSizes: [10, 20, 50],

					columns: [
						{ fieldName: 'firstName', title: 'First Name', },
						{ fieldName: 'lastName', title: 'Last Name', },
					],

				},

				settings3: {

					cultrue: dtxGridVueCulture,
					url: '/LearningDtxGridVue/GetData',

					// New!
					pageSize: 20,
					pageSizes: [10, 20, 50, 100],

					columns: [
						{ fieldName: 'firstName', title: 'First Name', },
						{ fieldName: 'lastName', title: 'Last Name', },
					],

				},

			},

		})

	</script>
</body>
</html>
